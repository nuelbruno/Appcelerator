<Alloy>
	<TableViewRow id="tblRow">
		<View id="topBackView">
			<Label id="lblOrderNumber"></Label>
			<Button id="btnStatus"></Button>
			<ImageView id="imgUpDown"></ImageView>
		</View>
		<!-- <View id="separatorView" class="hSeparator"></View> -->
		<View id="mainBackView">
			<View id="entityView" class="backViewProperty">
				<Label id="lblEntityTitle" class="titlePropety"></Label>
				<Label id="lblEntityValue" class="valueProperty"></Label>
			</View>
			<View class="hSeparator"></View>
			<View id="amountView" class="backViewProperty">
				<Label id="lblAmoutTitle" class="titlePropety"></Label>
				<Label id="lblAmoutValue" class="valueProperty"></Label>
			</View>
			<View class="hSeparator"></View>
			<View id="invoiceDateView" class="backViewProperty">
				<Label id="lblinvoiceDateTitle" class="titlePropety"></Label>
				<Label id="lblinvoiceDateValue" class="valueProperty"></Label>
			</View>
			<View class="hSeparator"></View>
			<View id="DueView" class="backViewProperty">
				<Label id="lblDueTitle" class="titlePropety"></Label>
				<Label id="lblDueValue" class="valueProperty"></Label>
			</View>
			<View class="hSeparator"></View>
			<View id="DueDateView" class="backViewProperty">
				<Label id="lblDueDateTitle" class="titlePropety"></Label>
				<Label id="lblDueDateValue" class="valueProperty"></Label>
			</View>
			<View class="hSeparator"></View>
			<View id="PayStatusView" class="backViewProperty">
				<Label id="lblPayStatusTitle" class="titlePropety"></Label>
				<Label id="lblPayStatusValue" class="valueProperty"></Label>
			</View>
			<Button id="btnViewPay" onClick="openPayments"></Button>
		</View>
		<View class="separator"></View>
	</TableViewRow>
</Alloy>