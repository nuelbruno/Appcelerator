					<Label id="lblNavTitle" class="lblNavTitleProperty"></Label>
				</View>
			</View>
			<ScrollView id="scrollView">
				<!-- <Label id="lblName" class="lblProperty"></Label>
				<View class="backViewProperty">
				<TextField id="txtFldName" class="txtFldProperty"></TextField>
				</View> -->
				<Label id="lblFederal" class="lblProperty"></Label>
				<View class="backViewProperty">
					<TextField id="txtFederal" class="txtProperty"></TextField>
					<ImageView id="imgArrowFederal" class="arrowProperty"></ImageView>
				</View>
				<!-- <Label id="lblDepartment" class="lblProperty"></Label>
				<View class="backViewProperty">
				<TextField id="txtDepartment" class="txtProperty"></TextField>
				<ImageView id="imgArrowDepartment" class="arrowProperty"></ImageView>
