					<TextField id="txtEmail" class="txtFldProperty"></TextField>
				</View>
				<Label id="lblEmployeeId" class="lblProperty"></Label>
				<View class="backViewProperty">
					<TextField id="txtEmployeeId" class="txtFldProperty"></TextField>
				</View>
				<!-- <Label id="lblNationalId" class="lblProperty"></Label>
				<View class="backViewProperty">
				<TextField id="txtNationalId" class="txtFldProperty"></TextField>
				</View> -->
				<ImageView id="separator"></ImageView>
				<View id="registerBtnView" onClick="doRegister">
					<Label id="lblRegister"></Label>
				</View>

			</ScrollView>
		</View>
		<View id="backView"></View>
		<View id="OTPView">
			<Label id="lblThankYou"></Label>
			<Label id="lblTitle"></Label>
			<View id="txtOTPBackView" class="backViewProperty">
				<TextField id="txtOTP" class="txtFldProperty"></TextField>
			</View>
			
			<View id="submitBtnView" onClick="doSubmitOTPCode">
					<Label id="lblSubmit"></Label>
