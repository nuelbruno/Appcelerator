	left : 15,
	right : 15,
	height : 120,
	borderColor: Alloy.Globals.path.grayColor,
	borderWidth: 1,
	borderRadius : 5,
}

".textBackView" :{
	top : 15
}

".validField":{
	top:5,
	left:10,
	width:15,
	textAlign:Titanium.UI.TEXT_ALIGNMENT_CENTER
}

".viewTextField":{
	height:Ti.UI.SIZE
}

"#textfieldEmail":{
	keyboardType:Titanium.UI.KEYBOARD_EMAIL
}

"#textfieldMobile":{	
  keyboardType:Titanium.UI.KEYBOARD_NUMBER_PAD
}

"#commentView":{
	top : 0,
	left : 0,
	right : 0,
	height : 30,
	borderRadius : 5,
	backgroundColor : Alloy.Globals.path.grayColor,
}

"#labelComments":{
	left : 10,
	right : 10,
	font : Alloy.Globals.path.font15,
	color : Alloy.Globals.path.whiteColor,
	textAlign : Titanium.UI.TEXT_ALIGNMENT_RIGHT,
}
"#labelComments[if=Alloy.Globals.isEnglish]":{
	textAlign : Titanium.UI.TEXT_ALIGNMENT_LEFT
}

"#textAreaComments":{
	left : 10,
	right : 10,
	top : 35,
	bottom : 5,
	font: Alloy.Globals.path.font14,
	color: Alloy.Globals.path.darkGray,
	returnKeyType:Titanium.UI.RETURNKEY_NEXT,
	textAlign: Titanium.UI.TEXT_ALIGNMENT_RIGHT,
	borderColor: 'transparent',
	backgroundColor: 'transparent'
}
"#textAreaComments[platform=android]":{
	left : 0,
	right : 0,
}
"#textAreaComments[if=Alloy.Globals.isEnglish]":{
	textAlign : Titanium.UI.TEXT_ALIGNMENT_LEFT
}

"#viewButtonBack":{
	top : 40,
	bottom : 15,
	left : 15,
	right : 15,
	height : 35,
	backgroundColor : "transparent"
}
"#btnSubmit":{
	right : 0,
	left : undefined, 
	width : "48%",
	height : "100%",
	borderRadius : 5,
