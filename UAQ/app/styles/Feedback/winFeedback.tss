
"#scrollviewSuggestion":{
	layout : "vertical",
	backgroundColor : Alloy.Globals.path.whiteColor,
	left : 0,
	right : 0,	
}
"#viewAttachment":{
	top : 5,
	height : 50,
	left : 15,
	right : 15,
	backgroundColor : "transparent",
}

".textViewCompress":{
	width: "100%",
	borderColor: Alloy.Globals.path.grayColor,
	borderWidth: 1,
	borderRadius : 5,
	right: 0,
	left:undefined
}

".textViewCompress[if=Alloy.Globals.isEnglish]":{
	left: 5,
	right : undefined,
	width:"98%"
}

"#scrollviewAttacment":{
	left : 0,
	right : 40,
	height : "100%",
	layout : "horizontal",
	backgroundColor : "transparent",
	horizontalWrap : false,
}

"#imageviewAdd":{
	right : 0,
	left : undefined,
	height : 35,
	width : 35,
	image : Alloy.Globals.path.icnAdd
}

"#labelLocationTitle":{
	top : 8,
	left : 15,
	right : 15,
	font : Alloy.Globals.path.font16,
	color : Alloy.Globals.path.darkGray,
	text : Alloy.Globals.selectedLanguage.location,
	textAlign : Titanium.UI.TEXT_ALIGNMENT_RIGHT
}
"#labelLocationTitle[if=Alloy.Globals.isEnglish]":{
	textAlign : Titanium.UI.TEXT_ALIGNMENT_LEFT
}

"#viewLocation":{
	top : 5,
	left : 15,
	right : 15,
	height : 60,
	borderRadius : 3,
	backgroundColor : Alloy.Globals.path.titleRedColor
}

"#labelLocationValue":{
	left : 10,
	right : 10,
	top : 3,
	bottom : 3,
	font : Alloy.Globals.path.font16,
	color : Alloy.Globals.path.whiteColor,
	textAlign : Titanium.UI.TEXT_ALIGNMENT_RIGHT
}
"#labelLocationValue[if=Alloy.Globals.isEnglish]":{
