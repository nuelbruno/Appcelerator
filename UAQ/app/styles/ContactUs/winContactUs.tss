	width: "100%",
	layout: "vertical",
	backgroundColor: Alloy.Globals.path.whiteColor
}

"#viewTitleBack":{
	left: 15,
	right: 15,
	height: Titanium.UI.SIZE,
	backgroundColor: "transparent"
}

"#labelTitle":{
	top: 10,
	height: Titanium.UI.SIZE,
	left: 85,
	right: 0,
	font: Alloy.Globals.path.font18Bold,
	color: Alloy.Globals.path.titleRedColor,
	textAlign: Titanium.UI.TEXT_ALIGNMENT_RIGHT
}
