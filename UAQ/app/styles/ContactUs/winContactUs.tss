	left: 0,
	right: 85,
	textAlign: Titanium.UI.TEXT_ALIGNMENT_LEFT
}

"#imageviewSeparator":{
	top: 10,
	width: "100%",
	height: 1,
	backgroundColor: Alloy.Globals.path.titleRedColor
}

".titleProperty":{
	left: 15,
	right: 15,
	height: Titanium.UI.SIZE,
	font: Alloy.Globals.path.font18,
