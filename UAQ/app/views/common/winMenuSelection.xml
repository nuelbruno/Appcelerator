<Alloy>
	<Window id="winMenuSelection" class="winLayout">
		
		<Label id="lblTitle"></Label>
		
		<View id="menuView">
			<View id="leftOuterMenu" class="outerMenuProperty">
				<Label id="lblLeft" class="lblProperty"></Label>
				<View id="leftInnerMenu" class="innerMenuProperty" onClick="selectLeftMenu"></View>	
			</View>
			
			<View id="rightOuterMenu" class="outerMenuProperty">
				<Label id="lblRight" class="lblProperty"></Label>
				<View id="rightInnerMenu" class="innerMenuProperty" onClick="selectRightMenu"></View>
			</View>
		</View>	
		
		<View id="viewOk" onClick="openHomeWindow">
			<Label id="lblOk"></Label>
		</View>
		
	</Window>
</Alloy>