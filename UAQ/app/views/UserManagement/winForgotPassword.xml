<Alloy>
	<Window id="winForgotPassword" class="win" onOpen="winOpen">
		<ScrollView id="viewForgotPassword">
			<View class="forgetPasswordView" onClick="hidepwdLicense">
				<ImageView id="imgPwdIndividual" class="iconProperty"></ImageView>
				<Label id="lblPwdIndividual"></Label>
			</View>
			<View class="forgetPasswordView1" onClick="hidepwdEmirate">
				<ImageView id="imgPwdEstablishment" class="iconProperty"></ImageView>
				<Label id="lblPwdEstablishment"></Label>
			</View>
			<View id="pwdEmiratesView">
				<TextField id="textfieldEmirateId" class="LoginTxtfldProperty" maxLength="18" onBlur="blurEvent_txtfieldEmirateId" onFocus="focusEvent_txtfieldEmirateId"  keyboardType="Titanium.UI.KEYBOARD_NUMBER_PAD"/>
			</View>
			<Label id="labelPwdMandatory">OR</Label>
			<View id="pwdPassportView">
				<TextField id="textfieldPassport" class="LoginTxtfldProperty"/>
			</View>
			<View id="pwdLicenseView">
				<Label class="validField" text="*"></Label>
				<View id="pwdLicense">
					<TextField id="textfieldLicense" maxLength="20" class="LoginTxtfldProperty"/>
				</View>
			</View>
			<View id="pwdUserNameView">
				<Label class="validField" text="*"></Label>
				<View id="pwdUserView">
					<TextField id="txtfieldUserName" class="LoginTxtfldProperty"/>
				</View>
			</View>
			<View id="pwdMobileNoView">
				<Label class="validField" text="*"></Label>
				<View id="pwdMobileView">
					<TextField id="textfieldMobile" class="LoginTxtfldProperty" onBlur="blurEventtxtfieldMobile" onFocus="focusMobileNumber"  maxLength="11" keyboardType="Titanium.UI.KEYBOARD_NUMBER_PAD"/>
				</View>
			</View>
			<View id="viewForgotButtonBack">
				<Button id="btnPasswordSubmit" onClick="submitForgotData"></Button>
				<Button id="btnPasswordCancel" onClick="closeForgotPopup"></Button>
			</View>
		</ScrollView>
	</Window>
</Alloy>